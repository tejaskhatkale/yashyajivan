<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/cardview_light_background"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo Image -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/newlog"
            android:contentDescription="App Logo"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jivanseva"
            android:textSize="35sp"
            android:textColor="@color/material_dynamic_primary0"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Login"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <!-- Member ID Input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edittext"
            android:hint="Member ID"
            android:textColor="@color/material_dynamic_primary10"
            android:textColorHint="@color/material_dynamic_primary20"
            android:padding="16dp"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edittext"
            android:hint="Password"
            android:textColor="@color/material_dynamic_primary10"
            android:textColorHint="@color/material_dynamic_primary20"
            android:padding="16dp"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginbutton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="#299bd7"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp" />

        <!-- Signup Navigation -->
        <!-- Signup Navigation -->
        <TextView
            android:id="@+id/tvSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Register here"
            android:textColor="@color/material_dynamic_primary0"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:clickable="true"
            android:focusable="true" />


        <!-- Franchise Login -->
        <!-- Franchise Login -->
        <TextView
            android:id="@+id/franchise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Franchise Login"
            android:textColor="#f49421"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="12dp"
            android:minHeight="48dp"
           android:clickable="true"
           android:focusable="true" />


    </LinearLayout>
</ScrollView>
