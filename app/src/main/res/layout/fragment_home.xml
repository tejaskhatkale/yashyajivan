<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Logo -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/user"
            android:layout_marginBottom="20dp"/>

        <!-- Upload Picture Button -->
        <Button
            android:id="@+id/uploadPictureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Picture"
            android:backgroundTint="@color/navbar"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- User Information -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jivanseva Wellness"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="108108"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/dateOfJoining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Joining: 05/07/2024"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/dateOfActivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Activation: 02/08/2024"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/personalDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/kycUpdateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KYC Update"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/bankDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Details"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/nomineeDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nominee Details"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/manageContactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Contact"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/passwordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
