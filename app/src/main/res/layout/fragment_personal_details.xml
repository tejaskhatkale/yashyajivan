<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Personal Information"
            android:textColor="#1F2C3E"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Sponsor ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sponsor ID:"
            android:textColor="#1F2C3E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/sponsorIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:hint="Enter Sponsor ID"
            android:text="NA"
            android:focusable="false"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#DADCE0" />

        <!-- Sponsor Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sponsor Name:"
            android:textColor="#1F2C3E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/sponsorNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:hint="Enter Sponsor Name"
            android:text="NA"
            android:focusable="false"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#DADCE0" />

        <!-- Member ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member ID:"
            android:textColor="#1F2C3E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/memberIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:hint="Enter Member ID"
            android:text="108108"
            android:focusable="false"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#DADCE0" />

        <!-- Member Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Name:"
            android:textColor="#1F2C3E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/memberNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:hint="Enter Member Name"
            android:text="Jivanseva Wellness"
            android:focusable="false"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#DADCE0" />

        <!-- Joining Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joining Date:"
            android:textColor="#1F2C3E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/joiningDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:hint="Enter Joining Date"
            android:text="July 5, 2024"
            android:focusable="false"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#DADCE0" />

        <!-- DOB -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB:"
            android:textColor="#1F2C3E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dobEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:hint="Enter DOB"
            android:inputType="date"
            android:text="01/08/2024"
            android:focusable="false"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#DADCE0" />

        <!-- Update Button -->
        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update!"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/navbar"
            android:layout_marginTop="24dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
